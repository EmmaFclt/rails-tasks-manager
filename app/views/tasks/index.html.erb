<h1>Au boulot :</h1>

  <% @tasks.each do |task|  %>
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
    <br>
  <% end %>

<%= link_to "Add a new task", tasks_new_path %>
